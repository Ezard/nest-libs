{
  "name": "@apposing/nest-firebase-auth",
  "version": "1.1.3",
  "description": "Provides a Nest.js wrapper for functionality around Firebase Auth, specifically guards and decorators",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    "require": "./dist/cjs/index.js",
    "import": "./dist/esm/index.js",
    "default": "./dist/esm/index.js"
  },
  "types": "dist/types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --project tsconfig.build-cjs.json",
    "build:esm": "tsc --project tsconfig.build-esm.json",
    "lint": "npm run lint:code && npm run lint:style",
    "lint:code": "eslint src",
    "lint:style": "prettier --check src",
    "prepublishOnly": "npm run build",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "test:unit:coverage": "jest --coverage",
    "test:unit:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apposing/apposing-nest-libs.git"
  },
  "author": "Ben Ezard",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/apposing/apposing-nest-libs/issues"
  },
  "homepage": "https://github.com/apposing/apposing-nest-libs/firebase-auth#readme",
  "peerDependencies": {
    "@apposing/nest-firebase": "^1.0.0",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/graphql": "^8.0.0 || ^9.0.0",
    "firebase-admin": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/platform-express": "8.1.2",
    "@nestjs/testing": "8.1.2",
    "@types/jest": "27.0.2",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "apollo-server-express": "2.25.2",
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.2",
    "jest": "27.3.1",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "supertest": "6.1.6",
    "ts-jest": "27.0.7",
    "typescript": "4.3.5"
  }
}
