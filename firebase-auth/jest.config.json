{
  "moduleFileExtensions": [
    "js",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".(e2e-)?spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "**/*.ts"
  ],
  "coveragePathIgnorePatterns": [
    "index.ts",
    ".spec.ts",
    ".e2e-spec.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  }
}
